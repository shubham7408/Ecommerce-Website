<style>
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
    }
    
    th, td {
        padding: 12px 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    
    th {
        background-color: #4CAF50;
        color: white;
        font-weight: bold;
    }
    
    tr:nth-child(even) {
        background-color: #f5f5f5;
    }
    
    tr:hover {
        background-color: #f0f0f0;
    }
</style>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Product Title</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach(function(product) { %>
            <tr>
                <td><%= product.id %></td>
                <td><%= product.title %></td>
            </tr>
        <% }); %>
    </tbody>
</table>